{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": false,
    "rootDir": "./src",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
